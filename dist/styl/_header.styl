@import '_vars.styl'


.nav
	&__row
		display flex
		justify-content space-between
		align-items center
		padding 20px 0
	&__list
		text-align center
		&--item
			display inline-block
			margin-right 50px
			&:last-child
				margin-right 0
		&--link
			display block
			font-family $Med
			color $light-color
			width 100%
			&:hover
				color $accent-color
	&__footer
		padding-bottom 20px
		margin-bottom 20px
		border-bottom 1px solid $accent-color
		.nav__list--link
			font-size  0.75em
			text-transform uppercase
			

	&__menu
		padding 12px 0
		border-top 2px solid #3b3b3b
		width 100%

		background rgba(26,26,26, .85)
		position relative
		z-index 1
		&--list
			display flex
			justify-content space-between
			align-items center
		&--item
			display inline-block
		&--link
			font 1em $Reg
			color $light-color
			&:hover
				color $accent-color
			&.active
				color $accent-color
.logo
	display inline-block
	&__img
		display inline-block
		max-width 55px
		margin-right 5px
	
	&__header
		color $dark-color
		display table
		.logo__img
			display table-cell
			vertical-align middle
		&:hover
			h2
				color $accent-color
			small
				color $accent-color
	&__loader
		img
			margin-right 0
			margin-bottom 10px
		h2
			color $light-color
				

	&__title
		display table-cell
		vertical-align middle
		font 1.6em $Batman
		transition all .23s ease-in-out
		small
			display block
			font .5em $Reg
			color #c0c0c0
			letter-spacing 2px
			transition all .23s ease-in-out
		
.phones
	position relative
	padding-left 35px
	font 1.125em $Med
	&:before
		content "\f095"
		font normal normal normal 14px/1 FontAwesome
		font-size 2em
		color $accent-color
		text-rendering auto
		-webkit-font-smoothing antialiased
		-moz-osx-font-smoothing grayscale
		display inline-block
		position absolute
		position absolute
		left 0
		top 50%
		transform translateY(-50%)
	&__link
		font inherit
		color $dark-color
		display inline-block
		margin-bottom 5px
		display block
		
		&:hover
			color $accent-color
.address
	font 1.125em $Med
	color $dark-color
	display inline-block
	position relative
	padding-left 25px
	&:before
		content "\f041"
		font normal normal normal 14px/1 FontAwesome
		font-size 2em
		color $accent-color
		text-rendering auto
		-webkit-font-smoothing antialiased
		-moz-osx-font-smoothing grayscale
		display inline-block
		position absolute
		width 20px
		position absolute
		left 0
		top 50%
		transform translateY(-50%)
	
.autoservice
	.btn
		text-align center
		color #1c1c1c
		strong
			font 1.125em $ExBold
		small
			font 0.75em $Reg
	&__mobile
		display none

			
		
	
.sect__first
	padding 180px 0 130px 0
	background url('../img/header-bg.png') top no-repeat 
	background-size cover !important
	background-attachment fixed !important
	margin-top -48px
	position relative

	
.header
	i.fa
		
	&__title
		color $light-color
		font 2.5em $Bold
		
	&__row
		margin 0 auto
		width 100%
		max-width 1200px
		padding 0 15px
		overflow-x hidden
		