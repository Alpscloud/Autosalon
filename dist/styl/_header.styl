@import '_vars.styl'


.nav
	&__row
		display flex
		justify-content space-between
		align-items center
	&__list
		text-align center
		&--item
			display inline-block
			margin-right 50px
			&:last-child
				margin-right 0
		&--link
			display block
			font-family $Med
			color $light-color
			width 100%
			&:hover
				color $accent-color
	&__header
		margin-bottom 160px
	&__footer
		padding-bottom 20px
		margin-bottom 20px
		border-bottom 1px solid $accent-color
		.nav__list--link
			font-size  0.75em
			text-transform uppercase
.logo
	display inline-block
	&__img
		display inline-block
		max-width 55px
		margin-right 5px
	
	&__header
		color $accent-color
		display table
		.logo__img
			display table-cell
			vertical-align middle
		&:hover
			h2
				color $light-color
			small
				color $accent-color
		
				

	&__title
		display table-cell
		vertical-align middle
		font 1.6em $Batman
		transition all .23s ease-in-out
		small
			display block
			font .5em $Reg
			color $light-color
			transition all .23s ease-in-out
		
.phones
	&__link
		font 1.125em $Med
		color $light-color
		display inline-block
		margin-bottom 5px
		display block
		
		&:hover
			color $accent-color
		
	
.header
	padding 12px 0 120px 0
	background url('../img/header-bg.png') top no-repeat 
	background-size cover !important
	background-attachment fixed !important
	&__title
		color $light-color
		font 2.5em $Bold