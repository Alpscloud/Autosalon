@import '_vars.styl'

.form
	background $form-bg
	border-radius 10px
	color $light-color
	&__header
		background #1a1a1a
		background rgba(#1a1a1a, .85)
		padding 0 25px 25px 25px
	&__input
		width 100%
		display block
		margin-bottom 15px
		padding 13px 20px
		text-align left
		color $dark-color
		font 1em $Reg
		background $light-color
		border 2px solid transparent
		transition all .23s ease-in-out
		&:hover,
		&:focus
			border-color $accent-color
		&--textarea
			resize vertical
			min-height 100px
		&--wrapp
			position relative
			.required
				position absolute
				right 10px
				top 50%
				transform translateY(-50%)
				color red
				font 12px $Light
				transition all .23s ease-in-out
				opacity 1
				visibility visible
				z-index 4
				&.hidden
					opacity 0
					visibility hidden
					z-index -1
		&.validate
			border-color red
	&__title
		display inline-block
		background $form-title-bg
		text-transform uppercase
		color $light-color
		font 1.125em $ExBold
		padding 10px 15px
		margin-bottom 35px
		border-bottom-left-radius 10px
		border-bottom-right-radius 10px
		
	&__descr
		margin-top 25px
		
.form__input::-webkit-input-placeholder
	color #c0c0c0
.form__input::-moz-placeholder
	color #c0c0c0
.form__input:-moz-placeholder
	color #c0c0c0
.form__input:-ms-input-placeholder
	color #c0c0c0
	
