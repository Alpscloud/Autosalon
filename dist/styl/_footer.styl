@import '_vars.styl'

.footer
	background $dark-color
	padding 40px 0
	
.copy
	color $accent-color
	text-align left
	font .85em $Light
	
.developed
	text-align right
	&__link
		font .85em $Light
		color $light-color
		strong
			color $accent-color
		&:hover
			opacity .7
				
.social__link
	display inline-block
	width 35px
	height 35px
	line-height 35px
	color $light-color
	
	border 2px solid $light-color
	margin-right 15px
	text-align center
	&:last-child
		margin-right 0
	i
		font-size 20px
		transition all .23s ease-in-out
	&:hover
		border-color $accent-color
		i.fa-instagram
			color #F6D6DF
		i.fa-vk
			color #507299
	
		
				
