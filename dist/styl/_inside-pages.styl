@import '_vars.styl'
b
	font-family $ExBold
// BUY
.articles
	&__item
		border-radius 10px
		background $dark-color
		display flex
		justify-content space-between
		overflow hidden
		margin-bottom 25px
		&--thumbnail
			flex-basis 30%
			
			a
				display block
				height 100%
				&:hover
					opacity .9
			img
				display block
				height 100%
				
	.auto__item--descr
		flex-basis 70%
		background transparent
	.auto__item--title
		margin-bottom 0
		
.auto__item
	&--properties
		text-align left
		.auto__item--info
			display inline-block
			margin-right 15px
			font-size 1.1em
			&:last-child
				margin-right 0
	&--text
		font-size 0.875em
		margin 15px 0
		
// About
.about__text
	margin-bottom 50px
.about__img
	min-height 360px
	background-size cover
	background-position center
	background-repeat no-repeat
	
// Sell page
.links__row
	display flex
	justify-content space-between
	align-items center
	margin-bottom 30px
	
.work__item
	text-align center
	position relative
	transition all .23s ease-in-out
	&:hover
		.work__item--ic
			background $accent-color
		svg
			fill $form-bg
	&:after
		display block
		content ''
		position absolute
		top 60px
		right -40px
		background url('../img/arrow.svg') center no-repeat
		width 55px
		height 45px
	&--no--arrow
		&:after
			display none
	&--svg
		display inline-block
		width 72px
		height 85px
		fill $accent-color
		transition all .23s ease-in-out
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		
	&--ic
		border-radius 50%
		width 160px
		height 160px
		background-color $form-bg
		background-repeat no-repeat
		background-position center center
		margin 0 auto 10px auto
		position relative

	
.sell__item
	text-align center
	position relative
	transition all .23s ease-in-out
	padding 20px
	border 2px solid transparent

	&:hover
		border-color $form-bg
		.sell__item--ic
			background $accent-color
		.sell__item--title
			color $accent-color
			&:before
				background $form-bg
		svg
			fill $form-bg
	
	p
		margin-bottom 25px
	
	&--title
		text-transform uppercase
		font 1.2em $Med
		position relative
		margin-bottom 30px
		color $form-bg
		display block
		&:before
			content ''
			width 25px
			height 2px
			background $accent-color
			display inline-block
			position absolute
			left 50%
			transform translateX(-50%)
			bottom -15px
			transition all .23s ease-in-out
			
	&--svg
		display inline-block
		width 72px
		height 85px
		fill $accent-color
		transition all .23s ease-in-out
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		
	&--ic
		border-radius 50%
		width 160px
		height 160px
		background-color $form-bg
		background-repeat no-repeat
		background-position center center
		margin 0 auto 10px auto
		position relative
		
				
// Finance
.sect__finance
	text-align center
.finance__text
	margin-top 25px
	text-align left
	font-size 1.125em

.page__block--title
	text-transform uppercase
	font 1.3em $Med
	padding-bottom 4px
	border-bottom 2px solid $accent-color
	text-align left
	margin-bottom 25px

.finance__img
	img
		display block
		
	
// Special offer
.special__offer--block
	margin-top 25px
	img
		display block
		margin-bottom 30px
		&:last-child
			margin-bottom 0
			
// Contacts
.contacts__block--page
	padding 0
	max-width 100%
	background transparent
	box-shadow none
	h3
		text-transform uppercase
		margin-bottom 30px
		font 1.5625em $Bold

.map__title
	text-transform uppercase
	margin-bottom 30px
	color #3c3c3c
	font 1.5625em $Bold

.google__map--page
	height 300px
	


.filter
	margin-bottom 30px
	&__label,
	&__select
		display inline-block
		vertical-align middle
		
	&__select
		border 1px solid #3c3c3c
		padding 5px 10px
		&:focus
			border-color $accent-color
#slider	
	.bx-wrapper
		background transparent
		margin-bottom 30px
		border none
		box-shadow none	
	.bx-viewport
		
		.bxslider
			li
				height 100%
				
			a.fancybox
				display block
				overflow hidden
				position relative
				cursor pointer
				&:before
					z-index 5
					position absolute
					top 50%
					left 50%
					transform translate(-50%, -50%)
					display inline-block
					content ''
					width 32px
					height 32px
					transition all .23s ease-in-out
					opacity 0
					background-size cover
					background-position center
					background-image url('data:image/svg+xml;utf8;base64,')
				&:after
					content ''
					width 100%
					height 100%
					position absolute
					top 0
					left 0
					background rgba($dark-color, .3)
					display inline-block
					opacity 0
					transition all .23s ease-in-out
				&:hover
					&:after,
					&:before
						opacity 1
#bx-pager
	display flex
	align-items center
	justify-content center
	flex-wrap wrap
	
	a
		display inline-block
		width 132px
		height 100px
		margin-right 10px
		border 2px solid transparent
		overflow hidden
		margin-bottom 10px
		
		&.active
			border-color $accent-color
			img
				opacity .6
		&:hover
			border-color $accent-color
			opacity .8
		img
			display block
			height 100%
			width 100%