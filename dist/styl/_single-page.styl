@import '_vars.styl'


.single__block
	padding 15px
	border 2px solid $accent-color
	p
		color #525151
		margin 35px 0
		text-align left
	
	&--loc
		display flex
		justify-content space-between
		flex-wrap wrap
		align-items center
	
	&--price
		color #1a1a1a
		margin 0 !important
		strong
			font 2.625em $Med
			display inline-block
			margin-right 4px

.address__single
	font-size 1em
	color #525151
	
	
.single__block--form
	margin-top 35px
	.form__input
		margin-bottom 0
	h3
		text-transform uppercase
		font 1em $Med
		color #1a1a1a
		margin-bottom 15px
		
.single__list
	&--item
		float left
		width 30%
		margin-right 3%
		margin-bottom 3%
		vertical-align top
		&:nth-child(3n)
			margin-right 0
		small
			color #1a1a1a
			font 12px $Light
		strong
			font 1.1em $Med

#singleSlider
	.fotorama__stage
		margin-bottom 25px

	.fotorama__thumb-border
		border-color #d1d1d1
		