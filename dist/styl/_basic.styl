// File with all variables styles
@import '_vars.styl'

*
	padding 0
	margin 0
	box-sizing border-box
	
html
	text-size-adjust none
	
body
	font 16px $Reg
	color $dark-color
	background #ededed url('../img/body-bg.png') center
	background-size cover
	background-attachment fixed
	overflow-x hidden
	height 100%

h1,h2,h3,h4,h5,h6,ul,li
	margin 0
	padding 0

input,
textarea,
select
	outline none
	&:focus
		outline none
		
select
	appearance none
	-o-appearance none
	-ms-appearance none

a
	text-decoration none
	outline none
	transition all .23s ease-in-out
	&:hover
		text-decoration none
		
button
	box-shadow none
	border none
	outline none
	cursor pointer
	transition all .23s ease-in-out
	background transparent

img
	width 100%
	height auto
	
.container
	position relative
	z-index 2
	
.clearfix:before,
.clearfix:after,
.container:before,
.container:after,
.container-fluid:before,
.container-fluid:after,
.row:before,
.row:after
	content " "
	display table

.clearfix:after,
.container:after,
.container-fluid:after,
.row:after
	clear both

.left
	float left

.right
	float right

	
.box 
	padding 80px 0

.no-padding
	padding 0

.w3c
	visibility hidden
	display none
.sect__overlay
	position relative
	&:after
		content ''
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background rgba($dark-color, .54)
		
.sect__title
	font  2.1875em $Light
	color $dark-color
	text-transform uppercase
	margin-bottom 80px
	position relative
	text-align center
	&:before
		content ''
		display inline-block
		width 130px
		height 2px
		background $accent-color
		position absolute
		left 50%
		transform translateX(-50%)
		bottom -10px
	&--light
		color $light-color
	&--text
		margin-bottom 30px

.sect__descr
	text-align center
	font 1.125em $light
	margin-bottom 50px
	&--light
		color $light-color
	
.sect__bg
	background $dark-sect-bg
	

.text-center
	text-align center
.text-left
	text-align left
.text-right
	text-align right
		
		