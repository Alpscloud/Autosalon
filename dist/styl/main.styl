//Reset css
@import '_reset.styl'
// File with all variables styles
@import '_vars.styl'
// Grid
@import '_grid.styl'
// File with fonts
@import '_fonts.styl'
// File with basic style (body styles, etc)
@import '_basic.styl'
// File with header styles
@import '_header.styl'
// icons
@import '_icons.styl'
//interface styles (buttons, links, etc)
@import '_interface.styl'
// Forms style
@import '_form.styl'

	
// Auto card
.auto__item
	border 1px solid $dark-color
	&--thumb
		height 100%
		min-height 240px
		
		img
			display block
			height 240px
	&--descr
		padding 25px 15px
		background $dark-color
		color $light-color
	&--title
		margin-bottom 15px
		a
			font 1.3625em $Bold
			display inline-block
			color $light-color
			&:hover
				color $accent-color
	&--info
		font-size 1.2em
		.accent
			color $accent-color
			display inline-block
			margin-right 5px
			font 1em $Med
			
	.btn
		margin 15px auto 0 auto
			
// Section cat
.sect__cat
	background url('../img/catalog-bg.png') center no-repeat
	background-size cover !important
	background-attachment fixed !important
	.btn
		text-transform uppercase
		font 1em $Bold
	
.sect__cat,
.sect__callback
	.btn
		position relative
		z-index 3
// Section Services
.service__item
	position relative
	
	display block
	width 25%
	height 200px
	float left
	background url('../img/service-item-bg.png') center no-repeat
	background-size cover !important
	
	text-transform uppercase
	overflow hidden
	padding 10px
	text-align center

	&--descr
		width 100%
		height 100%
		display table
		border 1px solid transparent
		transition all .23s ease-in-out
		font 1.4em $ExBold
		color $accent-color
		span
			display table-cell
			vertical-align middle
			
			
	&:hover
		color $light-color
		> span
			border-color $accent-color
			color $light-color
		
			
// Section adv
.adv__item
	padding 0
	border-bottom 2px solid #d3d5d7
	border-right 2px solid #d3d5d7
	height 250px
	transition all .23s ease-in-out
	&:nth-child(3n)
		border-right 0
	&:nth-child(4),
	&:nth-child(5),
	&:nth-child(6)
		border-bottom none
	&:hover
		svg
			fill $dark-color
	

.adv__block
	position relative
	color $light-text-color
	padding 30px
	&--title
		font 1.3125em $Med
		text-transform uppercase
		color $dark-sect-bg
	&--ic
		width 80px
		height 80px
		fill $accent-color
		transition all .23s ease-in-out
		display inline-block
		margin-bottom 25px

		
	
// Section seo
.sect__seo--descr
	font 1em $Reg
	color $light-color
	
// Sect callback
.sect__callback
	background url('../img/callback-bg.png') center no-repeat
	background-size cover !important
	background-attachment fixed !important
		
// Section map
.sect__map
	position relative
.google__map
	height 460px
	#map
		height 100%
		
.contacts
	position absolute
	top 50%
	transform translateY(-50%)
	left 0
	width 100%
	z-index 5
	pointer-events none
	&__block
		background #fdfdfd
		padding 20px 15px
		text-align left
		color #3c3c3c
		max-width 320px
		pointer-events auto
		box-shadow 0px 5px 20px 0px rgba($dark-color, 0.5)
	h3
		text-transform uppercase
		font 1.25em $Bold
		margin-bottom 20px
		
	&__item
		margin-bottom 20px
		p
			&:not([class="contacts__item--text"])
				font 1.125em $Bold
			
		&--text
			color #3c3c3c
			a
				color #3c3c3c
				margin-left 5px
				display inline-block

