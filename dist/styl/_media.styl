// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/
+max-screen(1400px)
	.sect__first
		padding 130px 0 80px 0
		
+max-screen(1200px)
	.nav__list--item
		margin-right 20px
		
	// header
	.autoservice
		.btn
			padding 10px 20px
			
	.form__callback 
		.form__input--wrapp
			max-width 320px
			
	// About
	.about__img
		min-height 300px
+max-screen(1000px)
	body
		font-size 14px
	.box
		padding 40px 0
	.sect__title
		margin-bottom 40px
	
	
	.logo__header
		small
			color $dark-color
		&:hover
			h2
				color $dark-color
	.sect__first
		margin-top -45px
		padding 85px 0 40px
	
	.auto__item
		&--title 
			a
				font-size 1.1em
		&--info
			font-size 1em
	.service__item--descr
		font-size 1.4em
		
	.form__callback
		text-align center
		.form__input--wrapp,
		.btn
			float none
			max-width 100%
		.form__input--wrapp
			margin-bottom 25px
			
	// About
	.about__img
		min-height 200px
			
+max-screen(900px)
	.header
		position fixed
		top 0
		left 0
		width 100%
		z-index 10
		box-shadow 0px 5px 20px 0px rgba($dark-color, 0.5)
		margin-bottom 0
		// background $light-color
		color $dark-color
		&__row
			background $light-color
	.autoservice
		display none
		&__mobile
			display block
			.btn
				strong
					font-size .9em
	.nav__row
		padding 10px 0
	.nav__menu
		position relative
		background rgba(26,26,26,.85)
		padding 10px 0
		.header__row
			background none
			display flex
			justify-content space-between
			align-items center

		&--list
			position absolute
			top 100%
			left 0
			right 0
			width 100%
			display none
			background rgba(26,26,26, .95)
		&--item
			display block
			border-bottom 1px solid $accent-color
			margin-right 0
			&:last-child
				border-bottom 0
		&--link
			padding 10px 0
			text-align center
			color $light-color
			display block
			text-transform uppercase
			letter-spacing 2px
				
		.nav__row
			padding 15px 0
		
	.hamburger
		display inline-block
	
	.sect__first
		margin-top 0
		padding-top 200px
		
	.main
		padding-top 180px
		
+max-screen(767px)
	
	.copy
		text-align center
		margin-bottom 20px
	.developed
		text-align center
		

	.google__map
		height 200px
	.contacts
		position relative
		transform none
		margin 25px 0
		&__block
			margin 0 auto
			
	
	
	.header
		&__title
			margin-bottom 25px
			text-align center
		
	.auto__item
		margin 0 auto 25px auto
		max-width 420px
		
	.service__item
		width 50%
		
	.sect__first
		padding-top 170px
		
	
	.adv__item
		padding 0
		border-bottom 2px solid #d3d5d7
		border-right 2px solid #d3d5d7
		height 250px
		
		&:nth-child(3)
			border-right 2px solid #d3d5d7
		&:nth-child(4)
			border-bottom 2px solid #d3d5d7
			
	// About
	.about__img
		margin-bottom 25px
		

	
			
+max-screen(700px)
	.btn__accent
		padding 10px 30px
	body
		font-size 12px
	.nav__header
		.nav__row
			display block

	
	.adv__item
		height 200px
	.adv__block--ic
		width 50px
		height 50px
		
	.btn__up
		right 10px
	
	.header__title
		font-size 2em
	
	.nav__footer
		.nav__row
			display block
			text-align center
		
		.nav__list
			margin 15px 0
			
+max-screen(600px)
	.phones,
	.address
		font-size 0.8333em
	.phones
		padding-left 20px
	.address
		padding-left 15px
	.nav__row
		.logo__title
			font-size 1em
			
+max-screen(450px)
	.form__input
		padding 10px
	.service__item
		height 140px
		&--descr
			font-size 1em
	.adv__item
		height 170px
	.adv__block--title
		font-size .8em
	.nav__footer
		.nav__list
			&--item
				display block
				margin-right 0
			&--link
				padding 10px 0
				
	.nav__row
		display block
		.logo
			margin 0 auto 10px auto
		.address
			padding-right 20px
			display inline-block
			vertical-align middle
		.phones
			display inline-block
			vertical-align middle
			a
				display block
				text-align left
				
	.sect__first
		padding-top 180px
				

			

+max-screen(350px)
	.hamburger
		bottom 55px
		top auto
	.phones
		text-align left

